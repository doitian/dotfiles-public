#Terminal = gnome-terminal --start-factory-server --use-factory
Terminal = urxvt
TermExec = recoll -q
AlwaysInTerm = ssh telnet ftp lynx mc vi vim mc top watch htop lftp

Width = 400
Top = 20
Left = 5

History = 256
ShowLast = 1
TabTimeout = 0
ShowDotFiles = 0
TabTimeout = 0

URL_http = x-www-browser '%u'
URL_mailto = x-www-browser 'mailto:%s'
URL_man = urxvt -e man '%s'
#URL_info = urxvt -e info '%s'
URL_info = urxvt -e info '%s'
URL_file =  pcmanfm '%s'
URL_readme = urxvt -e less /usr/share/doc/%s/README
URL_sh = sh -c '%s'

EXT:txt,cc,cpp,h,java,html,htm,epl,tex,latex,js,css,xml,xsl,am = emacsclient %s
EXT:doc = oowriter %s
EXT:ppt = ooimpress %s
EXT:pdf = xpdf %s
