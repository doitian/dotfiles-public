#!/usr/bin/env bash

set -e
set -u
[ -n "${DEBUG:-}" ] && set -x || true

JOURNAL_DIR="$HOME/.journal"
if ! [ -e "$JOURNAL_DIR" ] && [ -d "$HOME/Dropbox/Brain/journal" ]; then
  ln -snf "$HOME/Dropbox/Brain/journal" "$HOME/.journal"
fi
JOURNAL_FILE="$JOURNAL_DIR/Journal $(date +'%Y-%m-%d').md"

_date() {
  if [[ "$OSTYPE" == "darwin"* ]]; then
    date -j -f '%Y-%m-%d' "$1" +'%a, %b %d, %Y'
  else
    date --date="$1" +'%a, %b %d, %Y'
  fi
}
_tommorow() {
  if [[ "$OSTYPE" == "darwin"* ]]; then
    date -j -v +1d -f '%Y-%m-%d' "$1" +'%Y-%m-%d'
  else
    date --date="$1 + 1 day" +'%Y-%m-%d'
  fi
}
_yesterday() {
  if [[ "$OSTYPE" == "darwin"* ]]; then
    date -j -v -1d -f '%Y-%m-%d' "$1" +'%Y-%m-%d'
  else
    date --date="$1 - 1 day" +'%Y-%m-%d'
  fi
}

ensure_journal_file() {
  if ! [ -e "$JOURNAL_FILE" ]; then
    local date="${JOURNAL_FILE%.md}"
    date="${date##* }"

    echo "# Journal on $(_date $date)

## Metadata

**Date**:: [[$date]]
**Next**:: [[Journal $(_tommorow $date)]]
**Prev**:: [[Journal $(_yesterday $date)]]
**Kind**:: #journal

## Journal" >"$JOURNAL_FILE"
  fi
}

main() {
  ensure_journal_file

  sep_title="$*"
  if [ -n "$sep_title" ]; then
    sep_title=" $sep_title"
  fi

  (
    echo
    echo "### $(date +'%H:%M')${sep_title}"
    echo
  ) >>"$JOURNAL_FILE"
  cat >>"$JOURNAL_FILE"
  echo >>"$JOURNAL_FILE"

  echo "$JOURNAL_FILE"
}

main "$@"
