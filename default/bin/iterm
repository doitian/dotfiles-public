#!/usr/bin/env bash

set -e
set -u
[ -n "${DEBUG:-}" ] && set -x || true

export LANG=C.UTF-8

COMMAND=
if [ "$#" != 0 ]; then
  COMMAND="$(printf '%q ' "$@")"
fi

osascript -l JavaScript -e 'function run(arg) {
  const iterm = Application("iTerm");
  const window = iterm.createWindowWithDefaultProfile();
  iterm.write(window.currentSession, {text: arg});
}' "$COMMAND"
