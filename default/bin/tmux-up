#!/usr/bin/env bash

set -e
set -u
[ -n "${DEBUG:-}" ] && set -x || true

cat_config_file() {
  if [ -f "$1" ]; then
    cat "$1"
  else
    echo "send '${EDITOR:-vim}' C-m"
    echo "neww"
    echo "selectw -t 1"
  fi
  echo "detach"
}

ROOT_DIR="${1:-${PWD}}"
if [ -d "$ROOT_DIR" ]; then
  CONFIG_FILE="$ROOT_DIR/.tmux-up.conf"
elif [ -f "$ROOT_DIR" ]; then
  CONFIG_FILE="$ROOT_DIR"
  ROOT_DIR="$(dirname "$CONFIG_FILE")"
else
  echo "$ROOT_DIR does not exist!" >&2
  exit 1
fi

ROOT_DIR="$(cd "$ROOT_DIR" && pwd)"
CONFIG_FILE="$(basename "$CONFIG_FILE")"

SESSION="$(basename "$ROOT_DIR")"
SESSION="${SESSION#.}"
if [ "$CONFIG_FILE" != '.tmux-up.conf' ]; then
  SESSION="$SESSION/${CONFIG_FILE#.tmux-}"
  SESSION="${SESSION%.conf}"
fi
SESSION="${SESSION//[.:]/_}"

if ! tmux has-session -t "=$SESSION" >/dev/null 2>&1; then
  tmux new -d -c "$ROOT_DIR" -s "$SESSION"
  cat_config_file "$ROOT_DIR/$CONFIG_FILE" |
    TMUX='' tmux -C attach -t "=$SESSION" -f no-output >/dev/null
fi

if [ -n "${TMUX:-}" ]; then
  tmux switchc -t "=$SESSION"
else
  tmux attach -t "=$SESSION"
fi
