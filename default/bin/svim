#!/usr/bin/env bash

set -e
set -u
[ -n "${DEBUG:-}" ] && set -x || true

DIR="$(mktemp -d)"
trap "rm -rf $DIR" exit

GVIM=
if [ "${1:-}" = "-g" ]; then
  GVIM="$1"
  shift
fi

FILENAME="$*"
if [ -z "$FILENAME" ]; then
  FILENAME=scratch
elif [[ $FILENAME == .* ]]; then
  FILENAME="scratch$FILENAME"
fi

vim $GVIM -f +"cd $DIR" "$DIR/$FILENAME"
