#!/bin/bash

set -e
set -u
[ -n "${DEBUG:-}" ] && set -x || true

DIR="$(mktemp -d)"
trap "rm -rf $DIR" exit

GVIM=
if [ "${1:-}" = "-g" ]; then
  GVIM="$1"
  shift
fi

FILENAME="$*"
if [ -z "$FILENAME" ]; then
  FILENAME=clipboard
elif [[ $FILENAME == .* ]]; then
  FILENAME="clipboard$FILENAME"
fi

pbpaste > "$DIR/$FILENAME"
if vim $GVIM -b -f +"cd $DIR" "$DIR/$FILENAME"; then
  pbcopy < "$DIR/$FILENAME"
fi
