#!/bin/bash

set -e
set -u
[ -n "${DEBUG:-}" ] && set -x || true

DIR="$(mktemp -d)"
trap "rm -rf $DIR" exit

VIM=vim
if [ "${1:-}" = "-g" ]; then
  if which gvim &>/dev/null; then
    VIM=gvim
  fi
  shift
fi

FILENAME="$*"
if [ -z "$FILENAME" ]; then
  FILENAME=clipboard
elif [[ $FILENAME == .* ]]; then
  FILENAME="clipboard$FILENAME"
fi

ctrlv >"$DIR/$FILENAME"
if $VIM -b -f +"cd $DIR" "$DIR/$FILENAME"; then
  ctrlc <"$DIR/$FILENAME"
fi
