#!/usr/bin/env bash

set -e
set -u
[ -n "${DEBUG:-}" ] && set -x || true

if [ -z "${HTTP_PROXY:-}" ]; then
  PROXY_PROTOCOL="${PROXY_PROTOCOL:-http}"
  PROXY_HOST="${PROXY_HOST:-127.0.0.1}"
  PROXY_PORT="${PROXY_PORT:-7890}"

  if nc -z "$PROXY_HOST" "$PROXY_PORT" &>/dev/null; then
    :
  elif nc -z 192.168.2.6 "$PROXY_PORT" &>/dev/null; then
    PROXY_HOST="192.168.2.6"
  elif nc -z 192.168.2.5 "$PROXY_PORT" &>/dev/null; then
    PROXY_HOST="192.168.2.5"
  elif command -v powershell.exe &>/dev/null; then
    PROXY_HOST="$(powershell.exe -NoProfile -Command "(Get-NetIPAddress -InterfaceAlias Wi-Fi -AddressFamily IPv4).IPAddress | Write-Host -NoNewLine")"
  elif [ -f "/mnt/c/WINDOWS/System32/WindowsPowerShell/v1.0/powershell.exe" ]; then
    PS="/mnt/c/WINDOWS/System32/WindowsPowerShell/v1.0/powershell.exe"
    PROXY_HOST="$($PS -NoProfile -Command "(Get-NetIPAddress -InterfaceAlias Wi-Fi -AddressFamily IPv4).IPAddress | Write-Host -NoNewLine")"
  fi

  export HTTP_PROXY="${PROXY_PROTOCOL}://${PROXY_HOST}:${PROXY_PORT}"
fi

export HTTPS_PROXY="$HTTP_PROXY"
export ALL_PROXY="$HTTP_PROXY"
export FTP_PROXY="$HTTP_PROXY"
export RSYNC_PROXY="$HTTP_PROXY"
export GIT_SSH_COMMAND="gfw ssh"

PROXY_ENVS=({HTTPS,HTTP,ALL,FTP,RSYNC}_PROXY GIT_SSH_COMMAND)
SSH_CMDS=(ssh sftp scp slogin ssh-copy-id)

function cmd_on() {
  local v
  echo -n export
  for v in "${PROXY_ENVS[@]}"; do
    echo -n " $v='${!v}'"
  done
  echo ";"
  echo -n alias
  for v in "${SSH_CMDS[@]}"; do
    echo -n " $v='gfw $v'"
  done
  echo ";"
  echo '# source <(gfw)'
}

function cmd_off() {
  local v
  echo "unset ${PROXY_ENVS[*]};"
  echo "unalias ${SSH_CMDS[*]};"
  echo '# source <(gfw off)'
}

GFW_CMD="${1:-on}"
case "$GFW_CMD" in
on)
  cmd_on
  ;;
off)
  cmd_off
  ;;
sudo)
  shift
  IFS=,
  exec sudo "${BASH_SOURCE[0]}" "$@"
  ;;
ssh-proxy-command)
  PROXY_TYPE=
  if [[ "$OSTYPE" == "linux"* ]]; then
    case "$HTTP_PROXY" in
    socks://* | socks5://*)
      PROXY_TYPE="-X 5"
      ;;
    socks4://* | socks4a://*)
      PROXY_TYPE="-X 4"
      ;;
    *)
      PROXY_TYPE="-X connect"
      ;;
    esac
  fi
  PROXY_NETLOC="${HTTP_PROXY#*://}"

  shift
  exec nc $PROXY_TYPE -x "${HTTP_PROXY#*://}" "$@"
  ;;
ssh | sftp | scp | slogin | ssh-copy-id)
  shift
  exec "$GFW_CMD" -o ProxyCommand='gfw ssh-proxy-command %h %p' -o Compression=yes "$@"
  ;;
*)
  exec "$@"
  ;;
esac
