#!/usr/bin/env bash

set -e
set -u
[ -n "${DEBUG:-}" ] && set -x || true

if [ "${1:-}" = "--fzf-enable" ]; then
  echo ': "${FZF_ORIG_OPTS:="$FZF_DEFAULT_OPTS"}"'
  echo 'export FZF_DEFAULT_OPTS="$FZF_ORIG_OPTS --preview='\''dog {}'\''"'
  echo '# eval "$(preview --fzf-enable)"'
  exit 0
elif [ "${1:-}" = "--fzf-disable" ]; then
  echo 'export FZF_DEFAULT_OPTS="$FZF_ORIG_OPTS"'
  echo 'unset FZF_ORIG_OPTS'
  echo '# eval "$(preview --fzf-disable)"'
  exit 0
fi

function preview() {
  local arg="$1"
  if [ -d "$arg" ]; then
    exa -1 --color always --icons "$arg"
  else
    BAT_OPTS="--color=always --line-range :5000"
    if [ -n "${FZF_PREVIEW_LINES:-}" ]; then
      BAT_OPTS="$BAT_OPTS --style=numbers"
    fi

    if [ -e "$arg" ]; then
      local MIME="$(file --mime "$arg" 2>/dev/null || true)"
      case "$MIME" in
      *image/*)
        if [[ -n "${WEZTERM_UNIX_SOCKET-}" && -z "${TMUX-}" && -z "${FZF_PREVIEW_LINES-}" ]]; then
          wezterm imgcat "$arg"
          return
        fi
        ;;
      *charset=binary*) ;;
      *)
        bat $BAT_OPTS "$arg"
        return
        ;;
      esac

      exa --color always --icons -ld --header "$arg"
      if [ -n "$MIME" ]; then
        echo "${MIME#*: }"
      fi
    else
      echo "$arg: No such file or directory" >&2
      exit 1
    fi
  fi
}

[[ "$#" = 0 ]] && preview .
for arg; do
  preview "$arg"
done
