#!/bin/bash

set -e

function vimrc_full() {
  cat ~/.vimrc | grep -v '"NOREMOTE' | sed -e 's/^"REMOTE //'
}

function vimrc_simple() {
  cat <<"VIMRC"
call plug#begin('~/.vim/plugged')
Plug 'tpope/vim-sensible'
Plug 'tpope/vim-eunuch'
Plug 'ctrlpvim/ctrlp.vim'
Plug 'editorconfig/editorconfig-vim'
call plug#end()

let mapleader = ","
let g:mapleader = ","
let g:ctrlp_map = '<leader>,'
let g:ctrlp_root_markers = []
let g:ctrlp_working_path_mode = 'a'
set autoread
set hidden

function! HasPaste()
    if &paste
        return 'PASTE MODE  '
    en
    return ''
endfunction

set statusline=\ %{HasPaste()}%F%m%r%h\ %w\ \ CWD:\ %r%{getcwd()}%h\ \ \ Line:\ %l
VIMRC
}

testcommand='test -f ~/.vimrc'
if [ "$1" = "-f" ]; then
  vimrc="$(vimrc_full)"
  shift
elif [ "$1" = "-ff" ]; then
  vimrc="$(vimrc_full)"
  testcommand=false
  shift
else
  vimrc="$(vimrc_simple)"
fi

[ -n "$1" ] || (
  echo "require host"
  exit 1
)

plugvim="$(cat ~/.vim/autoload/plug.vim)"

ssh "$@" "
  mkdir -p ~/.vim/autoload
  mkdir -p ~/.vim/backup
  test -f ~/.vim/autoload/plug.vim || cat <<\"PLUG\" > ~/.vim/autoload/plug.vim
$plugvim
PLUG
  $testcommand || cat <<\"VIMRC\" > ~/.vimrc
$vimrc
VIMRC
"
