continue=true
daemon=false
log-level=info
file-allocation=falloc
max-connection-per-server=4
max-concurrent-downloads=3
max-overall-download-limit=0
min-split-size=5M
enable-http-pipelining=true

dir={{ salt['file.join'](dotfiles.home, 'Downloads') }}
input-file={{ salt['file.join'](dotfiles.home, 'Downloads', 'aria2.session') }}
save-session={{ salt['file.join'](dotfiles.home, 'Downloads', 'aria2.session') }}

enable-rpc=true
rpc-listen-all=true
rpc-secret={{ salt['grains.get_or_set_hash']('aria2:rpc-secret', length=12, chars='abcdefghijklmnopqrstuvwxyz0123456789') }}
