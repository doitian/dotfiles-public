{
	"default_module": "powerline.segments.common",
	"segment_data": {
		"hostname": {
			"before": " ",
			"args": {
				"only_if_ssh": true
			}
		},
		"virtualenv": {
			"before": "ⓔ "
		},
		"rbenv": {
			"before": "◈ "
		},
		"branch": {
			"before": " ",
			"args": {
				"status_colors": true
			}
		}
	},
	"segments": {
		"left": [
			{
				"module": "powerline.segments.shell",
				"name": "mode"
			},
			{
				"name": "hostname"
			},
			{
				"name": "user"
			},
			{
				"name": "virtualenv"
			},
			{
				"module": "powerlinex.segment.rbenv",
        "draw_inner_divider": true,
				"name": "rbenv"
			},
			{
				"name": "branch"
			},
			{
				"name": "cwd",
				"args": {
					"dir_limit_depth": null
				}
			},
			{
				"module": "powerline.segments.shell",
				"name": "jobnum"
			}
		],
		"right": [
			{
				"module": "powerline.segments.shell",
				"name": "last_pipe_status",
				"after": "↩"
			}
		]
	}
}

