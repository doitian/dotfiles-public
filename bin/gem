#!/bin/bash

if [ "$1" = 'paths' ]; then
  rr ruby -e 'puts Gem.path.join("\n")'
elif [ "$1" = 'la' ]; then
  rr gem list -a | rr ruby -p -e "
    paths = Gem.path
    n, vs = \$_.chop.split(' ', 2)
    vs = vs[1...-1].split(', ')
    \$_ = vs.collect do |v|
      basename = [n, v].join('-')
      dir = Gem.path.find { |p| File.exists?(File.join(p, 'gems', basename))}
      if vs.size == 1
        %Q|#{n} #{dir}/gems/#{basename}|
      else
        %Q|#{basename} #{dir}/gems/#{basename}|
      end
    end.join(%Q(\n)) + %Q(\n)
  "
elif [ "$1" = "cleanc" ]; then
  shift
  exec gem-cleanc "$@"
else
  if [ -n "$BUNDLE_GEMFILE" ]; then
    rbenv exec gem "$@"
  else
    rr gem "$@"
  fi
fi
