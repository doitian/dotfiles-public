#!/usr/bin/env zsh

GIST=/usr/local/bin/gist
GIST_ARG_COPY="-c"
GIST_ARG_OPEN=
if which runningx &> /dev/null && runningx; then
  GIST_ARG_OPEN="-o"
fi

if [ -x /usr/bin/open ]; then
  GIST_ARG_OPEN="-o"
fi

if which rlwrap &> /dev/null; then
  exec rlwrap $GIST $GIST_ARG_COPY $GIST_ARG_OPEN "$@"
else
  exec $GIST $GIST_ARG_COPY $GIST_ARG_OPEN "$@"
fi
