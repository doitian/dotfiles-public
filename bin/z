#!/bin/bash

if [ -S .zeus.sock ]; then
  exec zeus "$@"
elif [ -S tmp/spring/spring ]; then
  exec spring "$@"
else
  if ! [ "$1" = "start" ] && [ -f zeus.json ]; then
    echo "zeus.json is found but zeus is not started yet" >&2
  fi

  case "$1" in
    runner|r|console|c|server|s|generate|g|dbconsole|destroy|d)
      exec rr rails "$@"
      ;;
    rake|rspec)
      exec rr "$@"
      ;;
    test)
      shift
      exec rr rspec "$@"
      ;;
    *)
      exec zeus "$@"
      ;;
  esac
fi
