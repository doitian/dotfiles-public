#!/bin/zsh
if [ -x /usr/bin/open ]; then
  exec /usr/bin/open "$@"
fi

for arg; do
  if [ "$arg" = '-' ]; then
    arg=$(xclip -o)
  fi

  if [ -z "$arg" -o -d "$arg" ]; then
    if runningx; then
      xranger "$arg" &>/dev/null &
    else
      ranger "$arg"
    fi
  elif echo "$arg" | grep -q ":[0-9]\+$"; then
    emacs-dwim -n +"${arg##*:}" "${arg%:*}"
  else
    if runningx; then
      local app=xdg-open
      if which mimeo &> /dev/null; then
        app=mimeo
      fi
        
      if ! $app "$arg" &> /dev/null; then
        echo "Cannot open ${arg}" >&2
      fi
    else
      run-mailcap "$arg"
    fi
  fi
done

