{
  "Shell ➤ Shebang": {
    "prefix": "shebang",
    "body": ["#!/usr/bin/env ${1:bash}", "$0"]
  },
  "Shell ➤ Shebang with Debug": {
    "prefix": "shebangbang",
    "body": [
      "#!/usr/bin/env ${1:bash}",
      "",
      "set -e",
      "set -u",
      "[ -n \"\\${DEBUG:-}\" ] && set -x || true",
      "$0"
    ]
  }
}
